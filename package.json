{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "webpackを使用した開発テンプレート",
  "main": "index.js",
  "scripts": {
    "pug": "pug src --hierarchy -o dist -P",
    "pug:watch": "pug src --hierarchy -o dist -P -w",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch:dev": "webpack --mode=development --watch",
    "imagemin": "node imagemin.js",
    "imagemin:watch": "npm run imagemin & onchange \"src\" -- npm run imagemin",
    "server": "lite-server",
    "start": "npm run pug:watch & npm run watch:dev & npm run imagemin:watch & npm run server",
    "release": "npm run pug & npm run build & npm run imagemin"
  },
  "keywords": [],
  "author": "naoki.fukushima",
  "license": "ISC",
  "browserslist": [
    "last 2 versions",
    "> 2%",
    "IE 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.3.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "file-loader": "^5.0.2",
    "grob": "^1.0.0",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "lite-server": "^2.5.4",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "onchange": "^6.1.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "pug": "^3.0.1",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git",
    "sass-loader": "^8.0.0",
    "terser-webpack-plugin": "^2.3.0",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-fix-style-only-entries": "^0.4.0"
  }
}
